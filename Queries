SELECT sold.IMEI, iPhone.type, iPhone.color. iPhone.
WHERE (sold.buyer_ID=buyer.id)

UNION

SELECT buyer.name, buyer.Contact_no, sold.date_bought, sold.Sale_Price FROM sold, buyer
WHERE (sold.buyer_ID=buyer.id)
